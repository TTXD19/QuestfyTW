<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment.UserFollowingInfoFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_following_info_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/user_following_info_txtNoFollowingUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尚未追蹤任何使用者"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@color/CatergoryDarkGrayText"
        android:visibility="gone"
        android:layout_below="@+id/user_following_info_imgNotLogin"/>

    <ImageView
        android:id="@+id/user_following_info_imgNotLogin"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/not_login"
        android:visibility="gone"/>

</RelativeLayout>