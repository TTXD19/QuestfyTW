<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_message_recyclerView_circleUserImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/user_default_image"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/friend_message_recyclerView_txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/friend_message_recyclerView_circleUserImage"
        android:layout_toEndOf="@+id/friend_message_recyclerView_circleUserImage"
        android:layout_alignTop="@+id/friend_message_recyclerView_circleUserImage"
        android:textSize="18sp"
        android:text="夏宇喬"
        android:layout_marginTop="5dp"
        android:textColor="@color/FullBlack"/>

    <TextView
        android:id="@+id/friend_message_recyclerView_txtChatLines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginEnd="20dp"
        android:layout_toRightOf="@+id/friend_message_recyclerView_circleUserImage"
        android:layout_toEndOf="@+id/friend_message_recyclerView_circleUserImage"
        android:layout_below="@+id/friend_message_recyclerView_txtUserName"
        android:text="random generate text"
        android:textSize="18sp"
        android:layout_marginRight="20dp"/>

</RelativeLayout>