<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/keep_article_swipeRefreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment.KeepArticlesFragment"
    android:background="@color/FullWhite">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <android.support.v7.widget.RecyclerView
           android:id="@+id/keep_article_recyclerView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">



       </android.support.v7.widget.RecyclerView>

       <ProgressBar
           android:id="@+id/keep_articles_progressBar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"/>

       <TextView
           android:id="@+id/keep_article_txtNoArticlesKeep"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="尚未收藏任何問題"
           android:layout_below="@+id/keep_article_imgNotLogin"
           android:layout_centerHorizontal="true"
           android:textSize="18sp"
           android:textColor="@color/CatergoryDarkGrayText"
           android:visibility="gone"/>

       <ImageView
           android:id="@+id/keep_article_imgNotLogin"
           android:layout_width="300dp"
           android:layout_height="300dp"
           android:layout_centerInParent="true"
           android:src="@drawable/not_login"
           android:visibility="gone"/>


   </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>