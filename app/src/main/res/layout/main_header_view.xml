<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="250dp"
    android:minHeight="220dp"
    android:background="@drawable/main_nav_header_backgroud"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_nav_header_user"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/user_default_image"
        />

    <TextView
        android:id="@+id/txt_nav_header_userID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="-------------"
        android:textSize="20sp"
        android:layout_below="@+id/img_nav_header_user"
        android:layout_marginTop="20dp"
        android:textColor="@color/FullWhite"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_nav_header_userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="-----------------------------"
        android:textSize="14sp"
        android:layout_below="@+id/txt_nav_header_userID"
        android:layout_marginTop="5dp"
        android:textColor="@color/FullWhite"/>

    <TextView
        android:id="@+id/txt_nav_header_userVerified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verified"
        android:textSize="14sp"
        android:layout_below="@+id/txt_nav_header_userEmail"
        android:layout_marginTop="5dp"
        android:textColor="@color/FullWhite"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txt_nav_header_userSchoolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="------------"
        android:textColor="@color/FullWhite"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_nav_header_userVerified"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txt_nav_header_userInfoComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/information_not_complete"
        android:textColor="@color/FullWhite"
        android:layout_below="@+id/txt_nav_header_userVerified"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_nav_header_completeUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/click_to_register_your_complete_information"
        android:textSize="12sp"
        android:background="@drawable/main_nav_header_btn_send_email_verify"
        android:layout_below="@+id/txt_nav_header_userInfoComplete"
        android:layout_marginTop="10dp"
        android:textColor="@color/LightMainOrange"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:visibility="gone"/>



</RelativeLayout>