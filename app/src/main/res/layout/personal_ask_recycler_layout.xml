<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pesonal_ask_recycler_txtUserFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question come from user"
            android:textColor="@color/FullBlack"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/pesonal_ask_recycler_txtQuestionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="Question content"
            android:layout_below="@+id/pesonal_ask_recycler_txtUserFrom"
            android:textSize="18sp"
            android:textColor="@color/CatergoryDarkGrayText"/>
        
        <ImageView
            android:id="@+id/pesonal_ask_recycler_imgQuestionImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_below="@+id/pesonal_ask_recycler_txtQuestionContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/pesonal_ask_recycler_txtUserSolveIt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solve it"
            android:textColor="@color/LightMainOrange"
            android:layout_below="@+id/pesonal_ask_recycler_imgQuestionImage"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/pesonal_ask_recycler_txtUserAskDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:layout_below="@+id/pesonal_ask_recycler_imgQuestionImage"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/DateBlue"/>





    </RelativeLayout>



</android.support.v7.widget.CardView>