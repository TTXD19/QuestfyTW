<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_login_background_color">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/new_login_txtSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="Skip"
                android:textColor="@color/FullWhite"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/new_login_txtLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questfy"
                android:textColor="@color/FullWhite"
                android:textStyle="bold"
                android:textSize="36sp"
                android:layout_below="@+id/new_login_txtSkip"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/new_login_txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="歡迎 : )"
                android:textColor="@color/FullWhite"
                android:layout_marginTop="20dp"
                android:textSize="36sp"
                android:layout_below="@+id/new_login_txtLogo"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/new_login_txtWelcome2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_login_txtWelcome"
                android:text="開始登入享受"
                android:textSize="24sp"
                android:textColor="@color/FullWhite"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:textStyle=""/>

            <TextView
                android:id="@+id/new_login_txtWelcome3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_login_txtWelcome2"
                android:text="共同科系話題的交流吧 !"
                android:textColor="@color/FullWhite"
                android:textSize="24sp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/new_login_txtInputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/new_login_txtWelcome3"
                >

                <EditText
                    android:id="@+id/new_login_editInputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/e_mail"
                    android:textSize="18sp"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:textColor="@color/FullWhite"
                    android:textColorHint="@color/CatergoryDarkGrayText"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/new_login_txtInputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/new_login_txtInputEmail"
                >

                <EditText
                    android:id="@+id/new_login_editInputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:textSize="18sp"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:textColor="@color/FullWhite"
                    android:textColorHint="@color/CatergoryDarkGrayText"
                    />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/new_login_txtWrongPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帳號密碼錯誤 ) :"
                android:layout_marginLeft="30dp"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:layout_below="@+id/new_login_txtInputPassword"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/new_login_txtForgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘記密碼 ？"
                android:textColor="@color/FullWhite"
                android:textSize="16sp"
                android:background="?selectableItemBackground"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/new_login_txtInputPassword"
                android:layout_alignRight="@+id/new_login_txtInputPassword"
                android:layout_alignEnd="@+id/new_login_txtInputPassword" />

            <Button
                android:id="@+id/new_login_btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/new_login_txtForgetPassword"
                android:layout_marginTop="20dp"
                android:text="@string/sign_in"
                android:background="@drawable/new_login_btn_login_background"
                android:textColor="@color/LightMainOrange"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/new_login_txtOr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/new_login_btnSignIn"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/FullWhite"/>

            <LinearLayout
                android:id="@+id/new_login_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/new_login_txtOr"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Facebook"
                    android:textColor="@color/FullWhite"
                    android:background="@drawable/new_sign_in_btn_facebbok_background"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:textAllCaps="false"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/FullWhite"
                    android:text="Google +"
                    android:background="@drawable/new_login_btn_google_backgroung"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <TextView
                android:id="@+id/new_login_txtNoAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沒有帳號嗎 ？ 立即申請"
                android:layout_below="@+id/new_login_line"
                android:textSize="18sp"
                android:textColor="@color/FullWhite"
                android:background="?selectableItemBackground"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>




    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>

