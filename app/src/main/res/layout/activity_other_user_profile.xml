<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otherUser_profile_coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherUserProfileRelatedMethod.OtherUserProfileActivity">




    <android.support.design.widget.AppBarLayout
        android:id="@+id/otherUser_profile_appBayLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/otherUser_profile_collaspingToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@drawable/user_profile_background"
            app:expandedTitleMarginEnd="10dp"
            app:expandedTitleMarginStart="20dp"
            app:expandedTitleTextAppearance="@style/ExpandedAppBar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:id="@+id/relayUserProfile1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/user_profile_background">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/otherUser_profile_circleImgUser"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/user_default_image" />

                <TextView
                    android:id="@+id/otherUser_profile_txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otherUser_profile_circleImgUser"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="TTXD"
                    android:textColor="@color/FullWhite"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/otherUser_profile_txtUniName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otherUser_profile_txtUserName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="University Name"
                    android:textColor="@color/ï¼­ainOrange"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/otherUser_profile_txtMainCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otherUser_profile_txtUniName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Main Course"
                    android:textColor="@color/LightMainOrange"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/otherUser_profile_txtSpeciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otherUser_profile_txtMainCourse"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Speciality"
                    android:textAlignment="center"
                    android:textColor="@color/FullWhite"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/otherUser_profile_txtStatuseMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otherUser_profile_txtSpeciality"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Status message"
                    android:textAlignment="center"
                    android:textColor="@color/FullWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/otherUser_profile_toolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:titleTextColor="@color/FullWhite"
                android:theme="@style/BaseTheme">


            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/otherUser_profile_relay_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/otherUser_profile_btnFollow"
                    android:layout_width="135dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/LightMainOrange"
                    android:text="@string/follow"
                    android:textColor="@color/FullWhite"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/otherUser_profile_relay_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otherUser_profile_btnFollow"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:id="@+id/otherUser_profile_line_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/otherUser_profile_txtFollowers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/followers" />

                            <TextView
                                android:id="@+id/otherUser_profile_txtFollowersCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/otherUser_profile_txtFollowers"
                                android:layout_centerHorizontal="true"
                                android:text="0" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/otherUser_profile_txtAnswered"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/answered" />

                            <TextView
                                android:id="@+id/otherUser_profile_txtAnsweredCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/otherUser_profile_txtAnswered"
                                android:layout_centerHorizontal="true"
                                android:text="0" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/otherUser_profile_txtPosts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/posts" />

                            <TextView
                                android:id="@+id/otherUser_profile_txtPostsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/otherUser_profile_txtPosts"
                                android:layout_centerHorizontal="true"
                                android:text="0" />


                        </RelativeLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/otherUser_profile_btnAddFriend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/otherUser_profile_line_1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/add_friend_btn_background"
                        android:text="------"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/FullWhite" />


                    <Button
                        android:id="@+id/otherUser_profile_btnSendMessageQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/otherUser_profile_btnAddFriend"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/message_btn_background"
                        android:text="@string/ask_me_anything"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/FullWhite" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/otherUser_profile_relay_4"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:descendantFocusability="blocksDescendants"
                android:background="@color/CatergoryLightGrayBackground">

                <android.support.design.widget.TabLayout
                    android:id="@+id/otherUser_profile_tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/FullWhite"
                    app:tabGravity="fill"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/FullBlack"
                    app:tabTextColor="@color/CatergoryDarkGrayText"
                    >

                </android.support.design.widget.TabLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/otherUser_profile_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="600dp">

                </android.support.v4.view.ViewPager>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>