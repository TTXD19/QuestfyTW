<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/major_choose_confirm_background"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/edit_int_major_confirm_txtMajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Major"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toRightOf="@+id/edit_int_major_confirm_txtMajor"
        android:layout_toEndOf="@+id/edit_int_major_confirm_txtMajor"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/cancel_red"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp" />

</RelativeLayout>