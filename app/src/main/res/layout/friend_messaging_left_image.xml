<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friendMessagingLeftUserImage2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user_default_image"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:id="@+id/friendMessagingLeftImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_toRightOf="@+id/friendMessagingLeftUserImage2"
        android:layout_toEndOf="@+id/friendMessagingLeftUserImage2"
        android:layout_below="@+id/friendMessagingLeftUserImage2"
        android:background="@drawable/messaging_left_background"
        android:layout_marginBottom="10dp"/>



</RelativeLayout>