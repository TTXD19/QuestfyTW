<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/keep_articles_recycLayout_txtArticleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample article"
        android:textSize="24sp"
        android:textColor="@color/FullBlack"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/keep_articles_recycLayout_circleUserImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user_default_image"
        android:layout_alignLeft="@+id/keep_articles_recycLayout_txtArticleName"
        android:layout_alignStart="@+id/keep_articles_recycLayout_txtArticleName"
        android:layout_below="@+id/keep_articles_recycLayout_txtArticleName"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/keep_articles_recycLayout_txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User_Name"
        android:textSize="18sp"
        android:textColor="@color/FullBlack"
        android:layout_toRightOf="@+id/keep_articles_recycLayout_circleUserImage"
        android:layout_toEndOf="@+id/keep_articles_recycLayout_circleUserImage"
        android:layout_alignTop="@+id/keep_articles_recycLayout_circleUserImage"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/keep_articles_recycLayout_txtUploadData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018 Aug, 18"
        android:textColor="@color/DateBlue"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/keep_articles_recycLayout_circleUserImage"
        android:layout_toEndOf="@+id/keep_articles_recycLayout_circleUserImage"
        android:layout_below="@+id/keep_articles_recycLayout_txtUserName"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/keep_articles_recycLayout_txtTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAG"
        android:textSize="16sp"
        android:textColor="@color/ï¼­ainOrange"
        android:textStyle="bold"
        android:layout_below="@+id/keep_articles_recycLayout_circleUserImage"
        android:layout_alignLeft="@+id/keep_articles_recycLayout_circleUserImage"
        android:layout_alignStart="@+id/keep_articles_recycLayout_circleUserImage"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/keep_articles_recycLayout_txtArticlePreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample line"
        android:textColor="@color/FullBlack"
        android:textSize="16sp"
        android:layout_below="@+id/keep_articles_recycLayout_txtTag"
        android:layout_alignLeft="@+id/keep_articles_recycLayout_txtTag"
        android:layout_alignStart="@+id/keep_articles_recycLayout_txtTag"
        android:layout_marginBottom="5dp"
        android:maxLines="1"/>

    <com.sackcentury.shinebuttonlib.ShineButton
        android:id="@+id/keep_articles_recycLayout_btnHeart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/keep_articles_recycLayout_txtArticlePreview"
        android:src="@android:color/darker_gray"
        app:btn_color="@android:color/darker_gray"
        app:btn_fill_color="#FF6666"
        app:allow_random_color="false"
        app:enable_flashing="false"
        app:big_shine_color="#FF6666"
        app:click_animation_duration="200"
        app:shine_animation_duration="1500"
        app:shine_turn_angle="10"
        app:small_shine_offset_angle="20"
        app:small_shine_color="#CC9999"
        app:shine_count="8"
        app:siShape="@raw/heart"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp" />

</RelativeLayout>