<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppAnnouncementRelated.AppAnnouncementActivity">


    <TextView
        android:id="@+id/add_announcement_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="您好，Beta參加者。目前公告尚在製作中，近日內很快將會更新。非常感謝您擔任本次app的測試者。如果App有任何非預期之發生錯誤或停止運作，歡迎到Google play留下您的評論，我們將做更多的改進。
        \n\nQuestfy製作者敬上"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="@color/FullBlack"/>

    <ImageView
        android:id="@+id/add_announcement_imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/questfy_logo_style_5_4"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/add_announcement_txt"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>