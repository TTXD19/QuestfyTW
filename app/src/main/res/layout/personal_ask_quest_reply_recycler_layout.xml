<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="8dp"
    android:background="@color/FullWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/FullWhite">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personal_ask_quest_reply_recycler_imgUserImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/user_default_image"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/personal_ask_quest_reply_recycler_txtUserFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question come from user"
            android:textColor="@color/FullBlack"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="12dp"
            android:layout_alignTop="@+id/personal_ask_quest_reply_recycler_imgUserImage"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/personal_ask_quest_reply_recycler_imgUserImage"/>

        <TextView
            android:id="@+id/personal_ask_quest_reply_recycler_txtQuestionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:text="Question content"
            android:textSize="16sp"
            android:layout_below="@+id/personal_ask_quest_reply_recycler_imgUserImage"
            android:textColor="@color/CatergoryDarkGrayText"
            android:textIsSelectable="true"
            android:layout_marginStart="5dp"
            android:layout_alignStart="@+id/personal_ask_quest_reply_recycler_imgUserImage"
            />

        <ImageView
            android:id="@+id/personal_ask_quest_reply_recycler_imgQuestionImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignStart="@+id/personal_ask_quest_reply_recycler_imgUserImage"
            android:layout_below="@+id/personal_ask_quest_reply_recycler_txtQuestionContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="25dp"
            />

        <TextView
            android:id="@+id/personal_ask_quest_reply_recycler_txtUserAskDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:layout_below="@+id/personal_ask_quest_reply_recycler_imgQuestionImage"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/DateBlue"/>





    </RelativeLayout>

</android.support.v7.widget.CardView>