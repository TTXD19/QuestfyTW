<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friendMessagingLeftUserImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user_default_image"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/friendMessagingLeftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:layout_below="@+id/friendMessagingLeftUserImage"
        android:layout_toRightOf="@+id/friendMessagingLeftUserImage"
        android:layout_toEndOf="@+id/friendMessagingLeftUserImage"
        android:text="Sample Message"
        android:textSize="18sp"
        android:textColor="@color/FullWhite"
        android:background="@drawable/messaging_left_background"
        android:padding="5dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>