<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/daily_question_txtTitle_small_recyclerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Image and Text test "
                android:textColor="@color/FullBlack"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxWidth="280dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/daily_question_txtSubject_small_recyclerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/daily_question_txtTitle_small_recyclerLayout"
                android:textSize="14sp"
                android:textColor="@color/LightMainOrange"
                android:textStyle="bold"
                android:text="Subject"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/daily_question_txtAuthor_small_recyclerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/daily_question_txtSubject_small_recyclerLayout"
                android:text="Author"
                android:textColor="@color/LightMainOrange"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />
            
            <ImageView
                android:id="@+id/daily_question_imgSmall_recyclerLayout"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>